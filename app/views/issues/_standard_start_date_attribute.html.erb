<% if Issue.start_date_format_is_datetime? %>
  <%= f.datetime_field(:start_date,
                       size: 10,
                       required: @issue.required_attribute?('start_date'),
                       value: f.object.start_date.try(:strftime,"%d/%m/%Y %H:%M" )) %>
<% else %>
  <%= f.date_field(:start_date,
                   size: 10,
                   required: @issue.required_attribute?('start_date'),
                   value: f.object.start_date.try(:strftime,"%d/%m/%Y" )) %>
<% end %>
